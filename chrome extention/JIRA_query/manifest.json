{
  "manifest_version": 3,
  "name": "Jira JQL",
  "version": "1.0.0",
  "description": "Popup that lets you enter JQL queries with autocomplete and opens them in Jira.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://lab14-analysis.atlassian.net/*"
  ]
}
